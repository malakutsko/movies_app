.panel-heading
  .panel-title.text-center
    %h1.title
      = t('devise.passwords.forgot_your_password')

.login
  = form_for resource, as: resource_name,
                       url: password_path(resource_name),
                       class: 'form-horizontal',
                       builder: BootstrapFormBuilder do |f|
    = f.form_group :email do
      = f.label :email, class: 'cols-sm-2 control-label'
      .cols-sm-10
        = f.email_field :email,
          autofocus: true,
          placeholder: t('devise.registrations.email_placeholder'),
          before: raw("<i class='fa fa-envelope'></i>")
    .form-group
      = f.submit t('devise.passwords.send_reset_password_instructions'),
        class: 'btn btn-primary btn-lg btn-block login-button'

  = render 'devise/shared/links'
