= render 'shared/page_title', title: t('devise.registrations.form_title')

.login
  = form_for(resource, as: resource_name,
                       url: registration_path(resource_name),
                       class: 'form-horizontal',
                       builder: BootstrapFormBuilder) do |f|
    = f.form_group :first_name do
      = f.label :first_name, class: 'cols-sm-2 control-label'
      .cols-sm-10
        = f.text_field :first_name,
          autofocus: true,
          placeholder: t('devise.registrations.first_name_placeholder'),
          before: raw("<i class='fa fa-user'></i>")
    = f.form_group :last_name do
      = f.label :last_name, class: 'cols-sm-2 control-label'
      .cols-sm-10
        = f.text_field :last_name,
          placeholder: t('devise.registrations.last_name_placeholder'),
          before: raw("<i class='fa fa-user'></i>")
    = f.form_group :email do
      = f.label :email, class: 'cols-sm-2 control-label'
      .cols-sm-10
        = f.email_field :email,
          placeholder: t('devise.registrations.email_placeholder'),
          before: raw("<i class='fa fa-envelope'></i>")
    = f.form_group :password do
      = f.label :password, class: 'cols-sm-2 control-label'
      .cols-sm-10
        = f.password_field :password,
          placeholder: t('devise.registrations.password_placeholder'),
          before: raw("<i class='fa fa-lock'></i>")
    = f.form_group :password_confirmation do
      = f.label :password_confirmation, class: 'cols-sm-2 control-label'
      .cols-sm-10
        = f.password_field :password_confirmation,
          placeholder: t('devise.registrations.password_confirmation_placeholder'),
          before: raw("<i class='fa fa-lock'></i>")
    .form-group
      = f.submit t('devise.registrations.submit_button'), class: 'btn btn-primary btn-lg btn-block login-button'

  = render 'devise/shared/links'
